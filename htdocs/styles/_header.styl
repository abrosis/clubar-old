header
	#masthead
		background $black
		height 65px
		width 100%

		.logo
			text-align center

		ul
			margin 0
			padding 0

			li
				list-style-type none
				display inline-block
				width 50px
				height	65px
				
				i:before						
					font-size 2rem
					background linear-gradient($green, $blue)
					-webkit-background-clip text
					-webkit-text-fill-color transparent  
				ul
					display none
				&.active
					background $darkgrey
									
	#logo
		height 30px
		width auto
		margin 17px 0 0 0 

	#search
		background $darkgrey
		height 40px

		input
			width 100%
			background $darkgrey
			border none
			outline none
			font-weight bold
			color $grey
			padding 5px 5px 5px 40px

			&::-webkit-input-placeholder
				color $grey

#banner
	background #151515 url(../images/bg.svg) no-repeat center center
	background-size cover
	text-align center
	.shadow
		padding 30px 0
		background linear-gradient(to bottom,  rgba(0,0,0,0) 0%,rgba(0,0,0,0.65) 100%)

		h1
			font-size 2.6rem
			color white


#filter
	background white
	border-bottom 1px solid $border
	min-height 60px
	nav
		ul
			list-style none
			padding 0
			margin 10px 0
			height calc(100% - 20px)
			overflow auto

			li
				border-left 1px solid #e0e0e0
				cursor pointer
				&:first-child
					border none

				a
					margin -10px 0 -10PX 0
					padding 20px
					display block
					color $grey
					font-weight bold

					&:hover
						text-decoration none

